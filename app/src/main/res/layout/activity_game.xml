<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:hwads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fbutton_color_silver"
    android:orientation="vertical">

    <include layout="@layout/layout_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:layout_marginRight="10dp"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:id="@+id/llAddCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/coins"/>

            <TextView
                android:id="@+id/txtCoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llheart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <ImageView
                    android:id="@+id/heart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/heart" />

                <TextView
                    android:id="@+id/txtLife"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/heart"
                    android:layout_alignTop="@+id/heart"
                    android:layout_alignRight="@+id/heart"
                    android:layout_alignBottom="@+id/heart"
                    android:layout_margin="9dp"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <info.hoang8f.widget.FButton
            android:id="@+id/gk"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/gk"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text="@string/general_knowledge"
            android:textColor="@android:color/white"
            android:focusableInTouchMode="false"
            android:textSize="22sp"
            fbutton:buttonColor="@color/fbutton_color_midnight_blue" />

        <info.hoang8f.widget.FButton
            android:id="@+id/sports"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text="@string/sports"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            fbutton:buttonColor="@color/fbutton_color_midnight_blue" />

        <info.hoang8f.widget.FButton
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text="HISTORY"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            fbutton:buttonColor="@color/fbutton_color_midnight_blue" />

        <info.hoang8f.widget.FButton
            android:id="@+id/generalScience"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:layout_marginEnd="30dp"
            android:drawablePadding="10dp"
            android:gravity="start|center"
            android:paddingLeft="10dp"
            android:text="GENERAL SCIENCE"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            fbutton:buttonColor="@color/fbutton_color_midnight_blue" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/adFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
       >

        <com.huawei.hms.ads.banner.BannerView
            android:id="@+id/hw_banner_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="79dp" />
    </RelativeLayout>

</LinearLayout>